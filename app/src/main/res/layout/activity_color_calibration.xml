<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStepNum"
            android:layout_width="10px"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="10px"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/colorProbeOf" />

        <TextView
            android:id="@+id/textViewStepsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="8" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/vertical_gradient_grey"
            android:text="@string/textNext"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coloredPanel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/currentColorImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50" />

        <SeekBar
            android:id="@+id/seekBarB"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/horizontal_gradient_blue"
            android:max="255"
            android:progress="50"
            android:tag="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50" />

        <SeekBar
            android:id="@+id/seekBarR"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/horizontal_gradient_red"
            android:indeterminate="false"
            android:max="255"
            android:progress="50"
            android:tag="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50" />

        <SeekBar
            android:id="@+id/seekBarG"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/horizontal_gradient_green"
            android:max="255"
            android:progress="50"
            android:tag="1" />
    </LinearLayout>

</LinearLayout>